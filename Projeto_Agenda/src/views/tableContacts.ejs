<ul class="row header-table">
  <li class="cell item-header">Nome</li>
  <li class="cell item-header">Sobrenome</li>
  <li class="cell item-header">Email</li>
  <li class="cell item-header">Telefone</li>
  <li class="cell item-header">Data de nascimento</li>
  <li class="cell item-header">Sexo</li>
  <li class="cell item-header">CPF</li>
  <li class="cell item-header">Ações</li>
</ul>
<% if (contacts) { %> 
  <% const options = { year: 'numeric', month: 'numeric', day: 'numeric' }; %> 
  <% contacts.forEach(contact => { %>
    <ul class="row row-body">
      <li class="cell cell-body">
        <%=contact.name%>
      </li>
      <li class="cell cell-body">
        <%=contact.surname%>
      </li>
      <li class="cell cell-body">
        <%=contact.email%>
      </li>
      <li class="cell cell-body">
        <%=contact.phone%>
      </li>
      <li class="cell cell-body">
        <%=contact.birthday.toLocaleDateString('pt-BR', options)%>
      </li>
      <li class="cell cell-body">
        <%=contact.gender%>
      </li>
      <li class="cell cell-body">
        <%=contact.cpf%>
      </li>
      <li class="cell cell-body li-btns">
        <input type="hidden" value="<%=csrfToken%>" name="_csrf" class="_csrf-delete">
        <a class="delete-contact" data-id="<%=contact._id%>" data-title="Deletar contato">Deletar</a>
        <a class="update-contact" data-id="<%=contact._id%>" data-title="Atualizar os dados do contato">Atualizar</a>
        <a class="copy-contact" data-title="Copiar dados do contato">Copiar</a>
      </li>
    </ul>
  <% });  %> 
  <% } else { %>
    <p>Não foram encontrados contatos</p>
  <% } %>  