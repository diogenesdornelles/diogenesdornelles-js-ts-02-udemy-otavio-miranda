<svg width="100%" height="3" xmlns="http://www.w3.org/2000/svg">
  <rect width="100%" height="2" x="0" y="0" />
</svg>
<div class="register-painel">
  <h1>Registrar novo usuário</h1>
  <form action="/registrar" method="POST" class="form">
    <input type="hidden" value="<%=csrfToken%>" name="_csrf" class="_csrf">
    <input type="text" name="name" id="name" placeholder="Nome" required pattern="[A-Za-zÀ-ú0-9 ]*">
    <input type="text" name="surname" id="surname" placeholder="Sobrenome" required pattern="[A-Za-zÀ-ú0-9 ]*">
    <label for="birthday">Data de nascimento</label>
    <input type="date" name="birthday" id="birthday" placeholder="Data de nascimento" required>
    <input type="email" name="email" id="email" placeholder="E-mail" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$">
    <div class="gender-option">
      Gênero masculino <input type="radio" name="gender" id="gender-male" value="male" checked>
      Gênero feminino <input type="radio" name="gender" id="gender-female" value="female">
    </div>
    <input type="text" name="cpf" id="cpf" placeholder="CPF" pattern="[0-9]{11}" required inputmode="number" minlength="11" maxlength="11" autocomplete="off">
    <input type="text" name="userName" id="userName" placeholder="Nome de usuário" required pattern="[ A-Za-z0-9]*">
    <input type="password" name="password" id="password" placeholder="Senha" required pattern="[A-Za-z0-9!@#$%]{6,}">
    <input type="password" name="repPassword" id="repPassword" placeholder="Repita a senha" required>
    <button type="submit" id="btn-submit" class="btn" data-title="Enviar formulário">Registrar</button>
  </form>
</div>
<svg width="100%" height="3" xmlns="http://www.w3.org/2000/svg">
  <rect width="100%" height="2" x="0" y="0" />
</svg>